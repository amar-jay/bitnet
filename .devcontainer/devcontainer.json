{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	//  "hostRequirements": {
	//    "cpus": 4
	//  },
	"waitFor": "onCreateCommand",
	"updateContentCommand": "python3 -m pip install -r requirements.txt",
	"postCreateCommand": "pip3 install torch --index-url https://download.pytorch.org/whl/cu118",
	"customizations": {
		"codespaces": {
			"openFiles": []
		},
		"vscode": {
			"extensions": [
				"ms-toolsai.jupyter",
				"ms-python.python"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/nvidia-cuda:1.1.0": {
			"installCudnn": true
		}
	}
}